<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0"
        id="com.armanco.trigonometry_persian" version="2.0.1">
    <name>مثلثات</name>
    <description>این برنامه دارای دو بخش ماشین حساب مثلثاتی و اتحادهای مثلثثاتی می باشد.</description>
    <author href="http://arman.co.com">armanco</author>
    <preference name="permissions" value="none"/>
    <preference name="phonegap-version" value="cli-6.5.0"/>
    <preference name="orientation" value="default"/>
    <preference name="target-device" value="universal"/>
    <preference name="fullscreen" value="false"/>
    <preference name="android-minSdkVersion" value="14"/>
    <preference name="android-installLocation" value="auto"/>
    <gap:plugin name="cordova-plugin-adad" source="npm"/>
    <gap:plugin name="cordova-plugin-splashscreen" source="npm"/>
    <gap:plugin name="cordova-plugin-statusbar" source="npm"/>
    <icon src="res/icon/icon.png"/>
    <icon src="res/icon/android/icon-36-ldpi.png" gap:platform="android" gap:qualifier="ldpi"/>
    <icon src="res/icon/android/icon-48-mdpi.png" gap:platform="android" gap:qualifier="mdpi"/>
    <icon src="res/icon/android/icon-72-hdpi.png" gap:platform="android" gap:qualifier="hdpi"/>
    <icon src="res/icon/android/icon-96-xhdpi.png" gap:platform="android" gap:qualifier="xhdpi"/>
    <icon src="res/icon/android/icon-144-xxhdpi.png" gap:platform="android" gap:qualifier="xxhdpi"/>
    <icon src="res/icon/android/icon-192-xxxhdpi.png" gap:platform="android" gap:qualifier="xxxhdpi"/>
    <preference name="StatusBarOverlaysWebView" value="true"/>
    <preference name="StatusBarBackgroundColor" value="#f6693d"/>
    <preference name="SplashScreen" value="splash"/>
    <preference name="SplashScreenDelay" value="2000"/>
    <preference name="SplashMaintainAspectRatio" value="true"/>
    <preference name="ShowSplashScreenSpinner" value="false"/>
    <splash src="res/screen/screen.png"/>
</widget>